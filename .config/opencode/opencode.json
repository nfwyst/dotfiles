{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "theme": "github",
  "permission": {
    "read": "allow",
    "edit": "allow",
    "glob": "allow",
    "grep": "allow",
    "list": "allow",
    "bash": "allow",
    "task": "allow",
    "skill": "allow",
    "lsp": "allow",
    "todoread": "allow",
    "todowrite": "allow",
    "webfetch": "allow",
    "websearch": "allow",
    "external_directory": "allow",
    "doom_loop": "allow"
  },
  "plugin": ["oh-my-opencode@latest"],
  "mcp": {
    "codin-d2c-mcp": {
      "type": "local",
      "command": ["bunx", "-y", "@byted/codin-d2c-mcp@latest"],
      "environment": {
        "CODIN_D2C_TOKEN": "{env:CODIN_D2C_TOKEN}",
        "FIGMA_ACCESS_TOKEN": "{env:FIGMA_ACCESS_TOKEN}",
        "BUN_CONFIG_REGISTRY": "{env:BUN_CONFIG_REGISTRY}"
      },
      "timeout": 1800000,
      "enabled": false
    }
  }
}
